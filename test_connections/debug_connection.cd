include rpi_3b_plus
include hc_sr04
include bme680
include icm_20948
include tf_mini
include dfrobot_motor_controller

connection:
    name: rpi_sonar
    board: rpi_3b_plus
    peripheral: hc_sr04
    peripheral_impl: HcSr04RPiGPIO
    power_connections:
	- gnd_1 -- gnd
	- power_5v_1 -- vcc 
    hw_connections:
	- gpio: bcm_7 -- echo
	- gpio: bcm_24 -- trigger
    communication_endpoint:
	topic: sonar_1.distance
	conn_params:
	    username: testuser
	    password: testuser
	    host: r4a-platform.ddns.net
	    port: 5782
	msg: Distance

connection:
    name: rpi_sonar_2
    board: rpi_3b_plus
    peripheral: hc_sr04 (2)
    peripheral_impl: HcSr04RPiGPIO
    power_connections:
	- gnd_1 -- gnd
	- power_5v_2 -- vcc 
    hw_connections:
	- gpio: bcm_4 -- echo
	- gpio: bcm_5 -- trigger

connection:
    name: rpi_bme680
    board: rpi_3b_plus
    peripheral: bme680
    peripheral_impl: BME680
    power_connections:
	- gnd_1 -- gnd
	- power_5v_2 -- vcc 
    hw_connections:
	- i2c: i2c_1 -- i2c_0
	    slave_address: 0x77
    communication_endpoint:
	topic: bme.data
	conn_params:
	    username: testuser
	    password: testuser
	    host: r4a-platform.ddns.net
	    port: 5782
	msg: Env

connection:
    name: rpi_icm
    board: rpi_3b_plus
    peripheral: icm_20948
    peripheral_impl: ICM_20948
    power_connections:
	- gnd_1 -- gnd
	- power_3v3_1 -- vcc 
    hw_connections:
	- spi: spi_0 -- spi_0
    communication_endpoint:
	topic: imu.data
	conn_params:
	    username: testuser
	    password: testuser
	    host: r4a-platform.ddns.net
	    port: 5782
	msg: Imu


connection:
    name: rpi_tfmini
    board: rpi_3b_plus
    peripheral: tf_mini
    peripheral_impl: TfMini
    power_connections:
	- gnd_1 -- gnd
	- power_5v_2 -- vcc 
    hw_connections:
	- uart: uart_0 -- uart_0
	    baudrate: 115200

connection:
    name: rpi_dfrobot
    board: rpi_3b_plus
    peripheral: dfrobot_motor_controller
    peripheral_impl: DfrobotMotorController
    hw_connections:
	- gpio: bcm_25 -- M1
	- gpio: bcm_26 -- M2
	- pwm: bcm_12 -- E1
	    frequency: 50 hz
	- pwm: bcm_13 -- E2
	    frequency: 50 hz
    communication_endpoint:
	topic: motor_controller
	conn_params:
	    username: testuser
	    password: testuser
	    host: r4a-platform.ddns.net
	    port: 5782
	msg: Motor_Controller
