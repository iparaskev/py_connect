include rpi_3b_plus
include hc_sr04

connection:
    name: rpi_sonar
    board: rpi_3b_plus
    peripheral: hc_sr04
    power_connections:
	- gnd_1 -- gnd
	- power_5v_1 -- vcc 
    hw_connections:
	- gpio: bcm_23 -- echo
	- gpio: bcm_24 -- trigger

connection:
    name: rpi_sonar_2
    board: rpi_3b_plus
    peripheral: hc_sr04 (2)
    power_connections:
	- gnd_1 -- gnd
	- power_5v_2 -- vcc 
    hw_connections:
	- gpio: bcm_2 -- echo
	- gpio: bcm_3 -- trigger
