include debug
include sonar

connection:
    name: rpi_sonar
    board: debug
    peripheral: sonar
    power_connections:
	- gnd_1 -- gnd
	- power_5v_1 -- vcc 
    hw_connections:
	- gpio: bcm_23 -- echo
	- gpio: bcm_24 -- trigger

connection:
    name: rpi_sonar_2
    board: debug
    peripheral: sonar (2)
    power_connections:
	- gnd_1 -- gnd
	- power_5v_2 -- vcc 
    hw_connections:
	- gpio: bcm_2 -- echo
	- gpio: bcm_3 -- trigger
